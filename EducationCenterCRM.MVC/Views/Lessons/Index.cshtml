@model IEnumerable<EducationCenterCRM.MVC.Models.LessonModel>

@{
    ViewData["Title"] = "Lessons";
}

<h1>@ViewData["Title"]</h1>


<p>
    <a asp-action="Create">Create lesson</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LessonDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Group)
            </th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(model => item.LessonDate)
                </td>
                <td>
                    <a asp-controller="StudentGroups" asp-action="Details" asp-route-id="@item.GroupId">@item.Group.Title</a>
                </td>
               
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

