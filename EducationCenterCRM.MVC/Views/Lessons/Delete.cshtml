@model EducationCenterCRM.MVC.Models.LessonModel

@{
    ViewData["Title"] = "Delete lesson";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Lesson</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LessonDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LessonDate)
        </dd>

        <dt class="col-sm-2">
            Group
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="StudentGroups" asp-action="Details" asp-route-id="@Model.GroupId">@Model.Group.Title</a>
