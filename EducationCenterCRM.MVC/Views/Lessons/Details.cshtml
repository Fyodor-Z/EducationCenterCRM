@model EducationCenterCRM.MVC.Models.LessonModel

@{
    ViewData["Title"] = "Details of lesson";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Lesson</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LessonDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LessonDate)
        </dd>

        <dt class="col-sm-2">
            Group
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="StudentGroups" asp-action="Details" asp-route-id="@Model.GroupId">@Model.Group.Title</a>
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Delete lesson", "Delete", new { id = Model.Id })|
    <a asp-action="Index">Back to List</a>
</div>
<hr/>
<div>
    <h4>Marks</h4>
    @await Html.PartialAsync("~/Views/Marks/_MarksOfLesson.cshtml", Model.Marks)
</div>


