@model IEnumerable<EducationCenterCRM.MVC.Models.StudentGroupModel>

@{
    ViewData["Title"] = "Groups";
}

<h1>Groups</h1>

<p>
    <a asp-action="Create">Create new group</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                Teacher
            </th>
            <th>
                Course
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
               <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @if (item.TeacherId != null)
                    {
                        <a asp-controller="Teachers" asp-action="Details" asp-route-id="@item.TeacherId">@item.Teacher.FullName</a>
                    }
                    else
                    {
                        @("not defined")
                    }
                   
                </td>
                
                <td>
                    @if (item.CourseId != null)
                    {
                        <a asp-controller="Courses" asp-action="Details" asp-route-id="@item.CourseId">@item.Course.Title</a>
                    }
                    else
                    {
                        @("not defined")
                    }
                   
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

